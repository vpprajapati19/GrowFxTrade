<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/ne_abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mainc"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_new">
                <androidx.appcompat.widget.Toolbar
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:elevation="0dp"
                    android:background="@color/bg_new">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivicon_tran"
                            android:layout_width="35dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:tint="@color/white"
                            android:src="@drawable/ic_back_arrow_new"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Your Transaction"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>
                <RelativeLayout
                    android:id="@+id/rel_bgRounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_profile_rounded">

                    <LinearLayout
                        android:id="@+id/layall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="left|center"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="Total Invest"
                                android:textColor="@color/colorTextPortfolio"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_invest"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:background="@drawable/square_edittext"
                                android:gravity="right|center"
                                android:layout_gravity="center"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorLinePortfolio">
                            </View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="left|center"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="Total Withdrawal"
                                android:textColor="@color/colorTextPortfolio"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_withdrawal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:background="@drawable/square_edittext"
                                android:gravity="right|center"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorLinePortfolio">
                            </View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="left|center"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="Total Profit"
                                android:textColor="@color/colorTextPortfolio"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:visibility="visible" />


                            <TextView
                                android:id="@+id/tv_profit"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:background="@drawable/square_edittext"
                                android:gravity="right|center"
                                android:layout_gravity="center"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorLinePortfolio">
                            </View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="Total Loss"
                                android:textColor="@color/colorTextPortfolio"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_loss"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_bold"
                                android:background="@drawable/square_edittext"
                                android:gravity="right|center"
                                android:layout_gravity="center"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorLinePortfolio">
                            </View>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview_add_currency"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/white"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true"
                            android:padding="@dimen/_10sdp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:orientation="horizontal"
                                    android:id="@+id/laydd"
                                    android:weightSum="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textColor="@color/blackTextColor"
                                        android:text="Date"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_5sdp"
                                        android:textAlignment="center"
                                        android:fontFamily="@font/lato_bold"
                                        android:textSize="@dimen/_14sdp" />
                                    <TextView
                                        android:textColor="@color/blackTextColor"
                                        android:fontFamily="@font/lato_bold"
                                        android:text="Type"
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_5sdp"
                                        android:textSize="@dimen/_14sdp" />
                                    <TextView
                                        android:textColor="@color/blackTextColor"
                                        android:text="Amount"
                                        android:textAlignment="center"
                                        android:fontFamily="@font/lato_bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_5sdp"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>
                                <View
                                    android:id="@+id/view"
                                    android:layout_below="@+id/laydd"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_height="1dp"
                                    android:background="@color/colorLine"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_home"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/view"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_8sdp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_below="@+id/rec_home"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp">
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
