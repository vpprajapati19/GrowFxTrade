<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mainc"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_new"
                app:layout_scrollFlags="enterAlways|scroll">

                <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@color/bg_new"
                    android:elevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivicon"
                            android:layout_width="35dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:tint="@color/white"
                            android:src="@drawable/ic_back_arrow_new"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/investmoney"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>
                <RelativeLayout
                    android:id="@+id/rel_bgRounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:background="@drawable/bg_profile_rounded">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_dolar_sv"></ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="Deposit Via"
                                    android:textColor="@color/colorLine"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="Net Banking"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorTitle"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="bold"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_invest_money_rounded_top"
                                    android:padding="@dimen/_15sdp">>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/lato_bold"
                                        android:text="Invested  "
                                        android:textColor="@color/colorTextInvest"
                                        android:textSize="@dimen/_16sdp"
                                        android:textStyle="bold"></TextView>

                                    <TextView
                                        android:id="@+id/tv_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:text="$ - "
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorTitle"
                                        android:textSize="@dimen/_16sdp"
                                        android:textStyle="normal"></TextView>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorLineInvest" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_invest_money_rounded"
                                    android:padding="@dimen/_15sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/lato_bold"
                                        android:text="Total INR  "
                                        android:textColor="@color/colorTextInvest"
                                        android:textSize="@dimen/_16sdp"
                                        android:textStyle="bold"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:text="Rs -"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorTitle"
                                        android:textSize="@dimen/_16sdp"
                                        android:textStyle="normal"></TextView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_invest_money_rounded_top"
                                    android:padding="@dimen/_15sdp">>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/lato_bold"
                                        android:text="Our Bank Details"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorTextInvest"
                                        android:textSize="@dimen/_16sdp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_invest_money_rounded_middel"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_15sdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.2">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/lato_bold"
                                                android:text="Bank Name"
                                                android:textColor="@color/gray_btn_bg_color"
                                                android:textSize="@dimen/_14sdp"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center|right"
                                            android:layout_weight="0.8">
                                            <TextView
                                                android:id="@+id/tv_bankname"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/lato_bold"
                                                android:text="Yes Bank"
                                                android:textColor="@color/colorTextInvest"
                                                android:textSize="@dimen/_14sdp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>



                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/colorLineInvest" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/lato_bold"
                                        android:text="Bank Account Nmnber"
                                        android:textColor="@color/gray_btn_bg_color"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2"
                                        android:layout_marginTop="@dimen/_8sdp">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.3">
                                            <TextView
                                                android:id="@+id/tv_bank_accountno"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/lato_bold"
                                                android:text="123456789"
                                                android:textColor="@color/colorTextInvest"
                                                android:textSize="@dimen/_15sdp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center|right"
                                            android:layout_weight="1.7">
                                            <ImageView
                                                android:id="@+id/iv_copybutton"
                                                android:layout_width="@dimen/_20sdp"
                                                android:layout_height="@dimen/_20sdp"
                                                android:src="@drawable/ic_copy_new" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/colorLineInvest" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/lato_bold"
                                        android:text="Bank IFSC code"
                                        android:textColor="@color/gray_btn_bg_color"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:weightSum="2"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="@dimen/_12sdp">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.3">
                                            <TextView
                                                android:id="@+id/tv_ifsccode"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/lato_bold"
                                                android:text="123456789"
                                                android:textColor="@color/colorTextInvest"
                                                android:textSize="@dimen/_15sdp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center|right"
                                            android:layout_weight="1.7">
                                            <ImageView
                                                android:id="@+id/iv_copybuttonifsc"
                                                android:layout_width="@dimen/_20sdp"
                                                android:layout_height="@dimen/_20sdp"
                                                android:src="@drawable/ic_copy_new" />
                                        </LinearLayout>



                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_sent_money_netbank"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_45sdp"
                                android:layout_weight="2"
                                android:background="@drawable/bg_button_red_new"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_11sdp"
                                    android:text="I HAVE SENT THE AMOUNT"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"></LinearLayout>
                        </LinearLayout>

                    </ScrollView>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>