<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/mainc"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_new"
                        app:layout_scrollFlags="enterAlways|scroll">
                        <androidx.appcompat.widget.Toolbar
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/toolbar"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:elevation="0dp"
                            android:background="@color/bg_new">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/ivicon"
                                    android:layout_width="35dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/white"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10.0dip"
                                    android:src="@drawable/ic_back_arrow_new"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tvtitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/lato_bold"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/investmoney"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                            </RelativeLayout>

                        </androidx.appcompat.widget.Toolbar>

                        <RelativeLayout
                            android:id="@+id/rel_bgRounded"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/toolbar"
                            android:background="@drawable/bg_profile_rounded">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_marginRight="@dimen/_18sdp"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColorHint="@color/colorLine">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:backgroundTint="@color/colorLine"
                                        android:cursorVisible="true"
                                        android:drawableLeft="@drawable/ic_user_sv"
                                        android:drawablePadding="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:hint="Name"
                                        android:inputType="none"
                                        android:paddingTop="@dimen/_15sdp"
                                        android:paddingBottom="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorLine"
                                        android:textSize="@dimen/_16sdp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColorHint="@color/colorLine">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:backgroundTint="@color/colorLine"
                                        android:cursorVisible="true"
                                        android:drawableLeft="@drawable/ic_email_sv"
                                        android:drawablePadding="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:hint="@string/email"
                                        android:inputType="none"
                                        android:paddingTop="@dimen/_15sdp"
                                        android:paddingBottom="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorLine"
                                        android:textSize="@dimen/_16sdp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_contactno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColorHint="@color/colorLine">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_contactno"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:backgroundTint="@color/colorLine"
                                        android:cursorVisible="true"
                                        android:drawableLeft="@drawable/ic_phone_sv"
                                        android:drawablePadding="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:hint="@string/contactno"
                                        android:inputType="none"
                                        android:paddingTop="@dimen/_15sdp"
                                        android:paddingBottom="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorLine"
                                        android:textSize="@dimen/_16sdp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_coundtrycode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColorHint="@color/colorLine"
                                    android:visibility="gone">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_coundtrycode"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:backgroundTint="@color/colorLine"
                                        android:cursorVisible="true"
                                        android:drawableLeft="@drawable/ic_user_new"
                                        android:drawablePadding="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:hint="@string/coundtrycode"
                                        android:inputType="text"
                                        android:paddingTop="@dimen/_15sdp"
                                        android:paddingBottom="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorLine"
                                        android:textSize="@dimen/_16sdp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_coundtry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:hint="Country"
                                    android:textColorHint="@color/colorLine">

                                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@android:id/text1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_29sdp"
                                        android:text="Country"
                                        android:textColor="@color/colorLine"
                                        android:textSize="@dimen/_9sdp" />

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/spinner_country"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:textSize="@dimen/_14sdp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/colorLine" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_investmoney"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColorHint="@color/colorLine">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_investmoney"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:backgroundTint="@color/colorLine"
                                        android:cursorVisible="true"
                                        android:drawableLeft="@drawable/ic_many_sv"
                                        android:drawablePadding="@dimen/_15sdp"
                                        android:fontFamily="@font/lato_regular"
                                        android:hint="@string/investmoney"
                                        android:inputType="numberDecimal"
                                        android:paddingTop="@dimen/_15sdp"
                                        android:paddingBottom="@dimen/_15sdp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/colorLine"
                                        android:textSize="@dimen/_16sdp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_payment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:hint="CRYPTO"
                                    android:textColorHint="@color/colorLine">

                                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@android:id/text1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_29sdp"
                                        android:text="Choose Deposit Option"
                                        android:textColor="@color/colorLine"
                                        android:textSize="@dimen/_9sdp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatSpinner
                                            android:id="@+id/spinner_payment"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:background="@null"
                                            android:dropDownWidth="match_parent"
                                            android:dropDownVerticalOffset="38dp"
                                            android:popupBackground="@drawable/spinner_corner"
                                            android:scrollIndicators="none"
                                            android:spinnerMode="dropdown"
                                            android:textSize="@dimen/_14sdp" />

                                        <LinearLayout
                                            android:layout_width="@dimen/_16sdp"
                                            android:layout_height="@dimen/_16sdp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:background="@drawable/ic_dolar_sv"
                                            android:gravity="right" />

                                        <LinearLayout
                                            android:layout_width="@dimen/_25sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:background="@drawable/ic_baseline_expand_more_24"
                                            android:gravity="right" />
                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/colorLine" />

                                </com.google.android.material.textfield.TextInputLayout>


                                <LinearLayout
                                    android:id="@+id/btn_submit"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_45sdp"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:layout_weight="2"
                                    android:background="@drawable/bg_button_red_new"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_25sdp"
                                        android:layout_weight="0.6"
                                        android:fontFamily="@font/lato_bold"
                                        android:gravity="left"
                                        android:paddingTop="@dimen/_10sdp"
                                        android:paddingBottom="@dimen/_11sdp"
                                        android:text="SUBMIT"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_16sdp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_24sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1.4"
                                        android:src="@drawable/ic_icon_button_new"
                                        facebook:tint="#FFFFFF" />
                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"></LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>