<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_new">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainc"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_scrollFlags="enterAlways|scroll">
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_60sdp"
            android:elevation="0dp"
            android:background="@color/bg_new">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivicon"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:tint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/ic_back_arrow_new"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/deletecurrency"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/img_search_back"
                    android:layout_width="22.0dip"
                    android:layout_height="22.0dip"
                    android:src="@drawable/ic_back_arrow_new"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Search"
                    android:fontFamily="@font/lato_regular"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_toLeftOf="@+id/img_search"
                    android:layout_toRightOf="@+id/img_search_back"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="22.0dip"
                    android:layout_height="22.0dip"
                    android:tint="@color/white"
                    android:src="@drawable/ic_search_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15.0dip"/>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:scrollbars="vertical"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </RelativeLayout>

</LinearLayout>